# Server Configuration
PORT=3000
NODE_ENV=development

# Operating Mode
# Set to 'demo' for mock Tuya devices, 'production' for real devices
MODE=demo

# Tuya Cloud API Configuration
# Get credentials from https://iot.tuya.com/cloud/
TUYA_CLIENT_ID=your_client_id_here
TUYA_CLIENT_SECRET=your_client_secret_here
TUYA_REGION=us
TUYA_ACCESS_URL=https://openapi.tuyaus.com
TUYA_MOCK=true

# LLM Configuration
# Options: 'rule-based', 'openai', 'groq', 'anthropic'
LLM_PROVIDER=rule-based
LLM_API_KEY=your_llm_api_key_here
LLM_MODEL=gpt-4

# Weather API Configuration (optional)
# Get free API key from https://openweathermap.org/api
WEATHER_API_KEY=your_weather_api_key_here

# JWT Secret for Authentication
JWT_SECRET=devsecret

# Logging Level
LOG_LEVEL=info
